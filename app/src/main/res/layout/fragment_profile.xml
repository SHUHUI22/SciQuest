<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBE9E7"
    android:orientation="vertical"
    tools:context=".ProfileFragment">


    <ImageView
        android:id="@+id/IVProfilePic"
        android:layout_width="220dp"
        android:layout_height="218dp"
        android:layout_marginTop="28dp"
        android:background="#FFFFFF"
        android:src="@drawable/profile_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TVHi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Hi, Joey"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IVProfilePic" />

    <ImageButton
        android:id="@+id/IMBtnEdit"
        android:layout_width="58dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:background="#FBE9E7"
        android:src="@drawable/edit_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/TVHi"
        app:layout_constraintTop_toBottomOf="@+id/IVProfilePic" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="432dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/TVUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="95dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="184dp"
            android:text="Joey"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/IVUsername"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TVEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="40dp"
            android:text="joey@gmail.com"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.678"
            app:layout_constraintStart_toEndOf="@+id/IVEmail"
            app:layout_constraintTop_toBottomOf="@+id/TVUsername" />

        <TextView
            android:id="@+id/TVAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="100dp"
            android:text="20 years old"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.92"
            app:layout_constraintStart_toEndOf="@+id/IVAge"
            app:layout_constraintTop_toBottomOf="@+id/TVEmail" />

        <TextView
            android:id="@+id/TVGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="152dp"
            android:text="Female"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.92"
            app:layout_constraintStart_toEndOf="@+id/IVGender"
            app:layout_constraintTop_toBottomOf="@+id/TVAge" />

        <ImageView
            android:id="@+id/IVUsername"
            android:layout_width="46dp"
            android:layout_height="38dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="48dp"
            android:src="@drawable/person_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/IVEmail"
            android:layout_width="46dp"
            android:layout_height="38dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/email_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/IVUsername" />

        <ImageView
            android:id="@+id/IVAge"
            android:layout_width="46dp"
            android:layout_height="38dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/info_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/IVEmail" />

        <ImageView
            android:id="@+id/IVGender"
            android:layout_width="46dp"
            android:layout_height="38dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/info_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/IVAge" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>